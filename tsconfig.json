{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "lib",
    "pretty": true,
    "removeComments": true,
    "strictNullChecks": true,
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "include": [
    "src/**/*.json",
    "src/**/*",
    "@types/**/*"
  ]
}
